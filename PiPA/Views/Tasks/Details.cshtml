@model PiPA.Models.Tasks

@{
    Layout = "_Layout";
}


<h1>Task Details</h1>


<p>Task Name: @Model.TaskName</p>
<p>Description: @Model.Description</p>
<p>Date Created: @Model.DateCreated</p>
<p>Planned date of Completion: @Model.PlannedDateComplete</p>
<p>Completed Date: @Model.CompletedDate</p>
<p>Is completed: @Model.IsComplete</p>

<a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
<a asp-action="Delete" asp-route-id="@Model.ID">Delete</a>
<a asp-action="Index">Back to All Tasks</a>

